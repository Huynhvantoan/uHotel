<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/concierge_right_main_mirror"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_toRightOf="@+id/concierge_leftmenu_bar"
    android:background="@drawable/mirror_background"
    android:orientation="vertical"
    android:paddingLeft="100dp"
    android:paddingRight="50dp"

    >

  <TextView
      android:id="@+id/concierge_right_main_mirror_txt"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:paddingTop="50dp"
      android:text="Connect to your roomItem wifi to enable our fling feature."
      android:textColor="@color/white"
      android:textColorHighlight="@color/grey"
      android:textSize="60sp"
      />

  <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="30dp"
      android:background="#CC000000"
      android:drawableLeft="@drawable/wifi"
      android:drawablePadding="10dp"
      android:paddingBottom="10dp"
      android:paddingLeft="30dp"
      android:paddingRight="30dp"
      android:paddingTop="10dp"
      android:text="Room1026   Password: Johnson"
      android:textColor="@color/white"
      android:textSize="40sp"
      />

  <TextView
      android:layout_width="800dp"
      android:layout_height="wrap_content"
      android:layout_marginTop="30dp"
      android:background="#CC000000"
      android:padding="20dp"
      android:text="1. Make sure your device is connected to the same network with the STB."
      android:textColor="@color/white"
      android:textSize="22sp"
      />

  <TextView
      android:id="@+id/concierge_right_main_mirror_txt1"
      android:layout_width="800dp"
      android:layout_height="wrap_content"
      android:background="#CC000000"
      android:paddingBottom="10dp"
      android:paddingLeft="20dp"
      android:paddingRight="20dp"
      android:paddingTop="-10dp"
      android:text="2. Visit &quot;http://192.168.0.103&quot; with web browser."
      android:textColor="@color/white"
      android:textSize="22sp"
      />

  <TextView
      android:id="@+id/concierge_right_main_mirror_txt2"
      android:layout_width="800dp"
      android:layout_height="wrap_content"
      android:background="#CC000000"
      android:paddingBottom="10dp"
      android:paddingLeft="20dp"
      android:paddingRight="20dp"
      android:paddingTop="10dp"
      android:text="3. Launch uShare and click &quot;uShare-1026&quot; to connect."
      android:textColor="@color/white"
      android:textSize="22sp"
      />
</LinearLayout>
