<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/concierge_right_main_housekeeping"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="100dp"
    android:paddingRight="50dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="50dp"
        android:text="Housekeeping"
        android:textColor="@color/white"
        android:textColorHighlight="@color/grey"
        android:textSize="40sp" />

    <TextView
        android:layout_width="455dp"
        android:layout_height="wrap_content"
        android:paddingTop="20dp"
        android:minLines="3"
        android:text="@string/housekeeping_text"
        android:textColor="@color/white"
        android:textSize="20sp" />

    <ImageView
        android:id="@+id/img_house"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="150dp"
        android:layout_marginRight="0dp"
        android:layout_marginTop="30dp"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:src="@drawable/concierge_house_selector" />

    <TextView
        android:id="@+id/txt_bottom"
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:gravity="center"
        android:text="@string/concierge_right_housekeeping_txt"
        android:textColor="@color/white"
        android:textSize="16sp" />
</LinearLayout>
